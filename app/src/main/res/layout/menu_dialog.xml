<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:backgroundTint="@color/white"
    android:paddingEnd="16dp">

    <Button
        android:id="@+id/savedWordsButton"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="کلمات حفظ شده"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/remainWordsButton"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="کلمات باقی مانده"
        android:backgroundTint="@color/translateTextColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/savedWordsButton"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>