<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wordTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">32sp</item>
        <item name="fontWeight">700</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="translateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/translateTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">500</item>

        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wordNumberTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/wordNumber</item>
        <item name="android:textSize">40sp</item>
        <item name="fontWeight">900</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>